

<div class = "new_container">
    <div class = "new_form">
    <h3>予定の新規追加</h3>


   
        <%= form_with model: @post do |f| %>
        <table>

            <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
            </tr>
            
            <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <td><%= f.datetime_field :start_date %></td>
            </tr>

            <tr>
            <th><%= f.label :finish_date, "終了日" %></th>
            <td><%= f.datetime_field :finish_date %></td>
            </tr>
          
            <tr>
            <th><%= f.label :all_date, "終日の場合はチェックをいれる"%></th>
            <td><%= f.check_box :all_date %></td>
            </tr>

            <tr>
            <th><%= f.label :memo, "スケジュールメモ"%></th>
            <td><%= f.text_area :memo %></td>
            </tr>
            

        </table>

        <div> 
            <ul>
                <li><%= f.submit "登録完了をする" %></li>
                <li><%= link_to "予定一覧に戻る" , :posts %></li>
            </ul>
        </div>
        <% end %>
        
     </div>
   
    

</div>
