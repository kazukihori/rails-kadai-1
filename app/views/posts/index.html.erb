<div class= "index_container">
    <% if flash[:notice] %>
    <p class = "notice" > <%= flash[:notice] %> </p>
    <% end %>


    <div class ="index_title">
        <h3>予定一覧</h3>
        <button class="new_button" onclick='location.href="http://localhost:3000/posts/new"'> 新規追加</button>
    </div>


    <table>

    <thead>
        <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th></th>
        <th></th>
        <th></th>
        </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>

        <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.finish_date %></td>
        <td><% if post.all_date == true%>⚪︎
            <% else %>
            <% end %>
            </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細" , post_path(post.id) %></td>
        <td><%= link_to "編集" , edit_post_path(post.id) %></td>
        <td><%= link_to "削除" , post_path(post.id), method:"delete", data:
        { confirm: "本当に削除しますか？", cancel: "やめる", commit: "削除する"},
        title: "削除確認" %></td>
        
        </tr>
        

      

    

        

    </tbody>
    <% end %>


    </table>

    



    <div class="index_footer">

    <p>予定合計 <%=@posts_count %> 件</p>

    <p>本日の日付 <%= @day %> </p>


    
    </div>

    

</div>

    




